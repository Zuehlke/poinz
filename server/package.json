{
  "name": "poinz-server",
  "version": "0.20.4",
  "description": "Distributed Planning Poker",
  "private": true,
  "author": "ruben@winterrific.net",
  "license": "MIT",
  "homepage": "https://github.com/winterrific/poinz",
  "repository": {
    "type": "git",
    "url": "https://github.com/winterrific/poinz.git"
  },
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest \"./test/unit\" \"./test/integration\"",
    "test:system": "jest \"./test/system\"",
    "test:migration": "jest --runInBand \"./test/migrations\"",
    "pretest": "npm run lint",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\" \"migrations/**/*.js\" \"./*js\"",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\" \"migrations/**/*.js\" \"./*js\"",
    "start": "node src/server.js",
    "migrate:status": "migrate-mongo status",
    "migrate:down": "migrate-mongo down",
    "migrate": "migrate-mongo up"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/unit/setup.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/test/**/*Test.js"
    ]
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "express": "^4.21.2",
    "express-sslify": "^1.2.0",
    "fastq": "^1.17.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "6.12.0",
    "nanoid": "^5.0.9",
    "papaparse": "^5.4.1",
    "rate-limiter-flexible": "^5.0.4",
    "socket.io": "^4.8.1",
    "tv4": "^1.3.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "eslint": "9.17.0",
    "jest": "29.7.0",
    "migrate-mongo": "11.0.0",
    "socket.io-client": "4.8.1"
  },
  "engines": {
    "node": ">=18"
  }
}
