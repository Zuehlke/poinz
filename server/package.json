{
  "name": "poinz-server",
  "version": "0.12.0",
  "description": "Distributed Planning Poker",
  "private": true,
  "author": "xeronimus@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/Zuehlke/poinz",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zuehlke/poinz.git"
  },
  "main": "lib/server.js",
  "scripts": {
    "build": "babel src -d lib --source-maps true",
    "test": "jest \"./test/unit\" \"./test/integration\"",
    "test:system": "jest \"./test/system\"",
    "test:migration": "jest --runInBand \"./test/migrations\"",
    "pretest": "npm run lint",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\" \"migrations/**/*.js\" \"./*js\"",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\" \"migrations/**/*.js\" \"./*js\"",
    "start": "node lib/server.js",
    "start:dev": "node src/server.dev.js",
    "migrate:status": "migrate-mongo status",
    "migrate:down": "migrate-mongo down",
    "migrate": "migrate-mongo up"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/unit/setup.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/test/**/*Test.js"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "4.17.1",
    "express-sslify": "1.2.0",
    "fastq": "1.13.0",
    "jsonwebtoken": "^8.5.1",
    "migrate-mongo": "8.2.3",
    "mongodb": "4.1.2",
    "papaparse": "5.3.1",
    "socket.io": "4.2.0",
    "tv4": "1.3.0",
    "uuid": "8.3.2",
    "winston": "3.3.3",
    "winston-daily-rotate-file": "4.5.5"
  },
  "devDependencies": {
    "@babel/cli": "7.15.7",
    "@babel/core": "7.15.5",
    "@babel/preset-env": "7.15.6",
    "@babel/register": "7.15.3",
    "babel-jest": "27.2.0",
    "eslint": "7.32.0",
    "jest": "27.2.0",
    "socket.io-client": "4.2.0"
  },
  "engines": {
    "node": ">=14"
  }
}
